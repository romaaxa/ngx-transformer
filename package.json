{
  "name": "ngx-transformer",
  "version": "0.1.1",
  "description": "Open-source library with angular transform pipes",
  "keywords": [
    "angular",
    "angular2",
    "pipes",
    "ngx",
    "numbro"
  ],
  "scripts": {
    "build": "ng build",
    "start": "ng serve",
    "test": "tslint --project tsconfig.lint.json && tsc -p tsconfig.spec.json && jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:debug": "node --inspect-brk --inspect ./node_modules/jest/bin/jest.js --runInBand"
  },
  "author": {
    "name": "Anton Romashko",
    "email": "romashanton@gmail.com",
    "url": "https://github.com/romaaxa"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/romaaxa/ngx-transformer.git"
  },
  "private": false,
  "peerDependencies": {
    "numbro": "^2.3.6"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^13.1.1",
    "@angular/cli": "^13.1.1",
    "@angular/common": "^13.1.0",
    "@angular/compiler": "^13.1.0",
    "@angular/compiler-cli": "^13.1.0",
    "@angular/core": "^13.1.0",
    "@angular/language-service": "^13.1.0",
    "@angular/platform-browser": "^13.1.0",
    "@angular/platform-browser-dynamic": "^13.1.0",
    "@types/eslint": "^6.8.0",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.13",
    "core-js": "^3.19.3",
    "jest": "^27.4.5",
    "jest-preset-angular": "^11.0.1",
    "lint-staged": "^12.1.2",
    "ng-packagr": "^13.1.1",
    "prettier": "^2.5.1",
    "rxjs": "^7.4.0",
    "tslib": "^2.3.1",
    "tslint": "^6.1.3",
    "typescript": "~4.4.4",
    "zone.js": "~0.11.4"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "tslint --project tsconfig.lint.json -c tslint.json --fix",
      "prettier --write",
      "git add"
    ]
  },
  "bugs": {
    "url": "https://github.com/romaaxa/ngx-transformer/issues"
  },
  "homepage": "https://github.com/romaaxa/ngx-transformer#readme",
  "license": "MIT"
}
